<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="iconmusic">
        <!--ICONE-->
        <control type="group" description="Icon View">
            <visible>Control.IsVisible(53)</visible>
            <control type="group" description="Container and frame">
                <control type="panel" id="53" description="Panel">
                    <left>30</left>
                    <top>70</top>
                    <width>1920</width>
                    <height>1010</height>
                    <onleft condition="!Skin.HasSetting(ViewsMenuOff)">9000</onleft>
                    <onleft condition="Skin.HasSetting(ViewsMenuOff)">noop</onleft>
                    <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
                    <onright condition="Skin.HasSetting(Scrollbars_Passive)">noop</onright>
                    <onup>53</onup>
                    <ondown>53</ondown>
                    <viewtype label="53">Grid</viewtype>
                    <pagecontrol>60</pagecontrol>
                    <scrolltime tween="sine" easing="inout">300</scrolltime>
                    <preloaditems>2</preloaditems>
                    <itemlayout height="225" width="225">
                        <control type="image">
                            <top>24</top>
                            <left>35</left>
                            <width>225</width>
                            <height>225</height>
                            <texture fallback="DefaultAddonMusic.png" background="true">$VAR[locandine]</texture>
                            <aspectratio>scale</aspectratio>
                            <bordertexture border="4">images/dvdbox.png</bordertexture>
                            <bordersize>1</bordersize>
                        </control>
                        <control type="textbox">
                            <visible>!StringCompare(ListItem.Label,..) + [Container.Content(years) | Container.Content(directors)]</visible>
                            <animation effect="slide" condition="Container.Content(directors)" end="0,19">Conditional</animation>
                            <top>64</top>
                            <centerleft>147</centerleft>
                            <width>140</width>
                            <height>70</height>
                            <align>center</align>
                            <font>size24</font>
                            <textcolor>black</textcolor>
                            <shadowcolor>-</shadowcolor>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="225" width="225">
                        <control type="group">
                            <animation effect="zoom" center="155,35" end="130" time="200" reversible="true">Focus</animation>
                            <animation effect="zoom" center="155,35" start="130" end="100" time="100" reversible="true">unFocus</animation>
                            <include>Scrollanim</include>
                            <control type="image">
                                <animation effect="fade" start="0" end="100" time="100" reversible="false">Focus</animation>
                                <animation effect="fade" start="100" end="0" time="50" reversible="false">unFocus</animation>
                                <left>19</left>
                                <top>9</top>
                                <width>256</width>
                                <height>256</height>
                                <texture colordiffuse="$VAR[diffuseselect]">images/white.png</texture>
                                <aspectratio>stretch</aspectratio>
                            </control>
                            <control type="image">
                                <top>24</top>
                                <left>35</left>
                                <width>225</width>
                                <height>225</height>
                                <texture fallback="DefaultAddonMusic.png" background="true">$VAR[locandine]</texture>
                                <aspectratio>scale</aspectratio>
                                <bordertexture border="4">images/dvdbox.png</bordertexture>
                                <bordersize>1</bordersize>
                            </control>
                            <control type="textbox">
                                <visible>!StringCompare(ListItem.Label,..) + [Container.Content(years) | Container.Content(directors)]</visible>
                                <animation effect="slide" condition="Container.Content(directors)" end="0,19">Conditional</animation>
                                <top>64</top>
                                <centerleft>147</centerleft>
                                <width>140</width>
                                <height>70</height>
                                <align>center</align>
                                <font>size24</font>
                                <textcolor>black</textcolor>
                                <shadowcolor>-</shadowcolor>
                                <info>ListItem.Label</info>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>
            <control type="image" description="Line Split">
                <centerleft>960</centerleft>
                <top>70</top>
                <width>1500</width>
                <height>1</height>
                <texture colordiffuse="main">lines/Line.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="group">
                <visible>[Container(53).Column(0) + !StringCompare(ListItem.Label,..)] | Container(53).Column(1) | Container(53).Column(2) | Container(53).Column(3)</visible>
                <left>1230</left>
                <top>890</top>
                <animation effect="slide" start="710,0" end="0,0" time="450" delay="200">visiblechange</animation>
                <control type="image" description="Dialog BG">
                    <width>700</width>
                    <height>168</height>
                    <texture border="30">images/ProgressBG.png</texture>
                </control>
                <control type="image" description="Dialog BG">
                    <width>700</width>
                    <height>168</height>
                    <texture border="30" colordiffuse="$VAR[diffuseselect]">images/ProgressBG.png</texture>
                </control>
                <control type="group">
                    <visible>!Container.Content(addons) + !Skin.HasSetting(noslideicon)</visible>
                    <animation condition="IsEmpty(ListItem.Property(Album_Label)) + IsEmpty(ListItem.Year)" effect="slide" end="0,15">Conditional</animation>
                    <control type="label" description="Title">
                        <left>10</left>
                        <top>4</top>
                        <width>680</width>
                        <height>50</height>
                        <align>center</align>
                        <font>size36</font>
                        <textcolor>orange</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" description="Media details">
                        <top>45</top>
                        <width>700</width>
                        <height>50</height>
                        <align>center</align>
                        <font>size26</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                    <control type="image" description="Stars">
                        <centerleft>350</centerleft>
                        <top>90</top>
                        <height>30</height>
                        <width>150</width>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="main">$INFO[ListItem.StarRating]</texture>
                    </control>
                </control>
                <control type="label">
                    <top>125</top>
                    <height>20</height>
                    <width>700</width>
                    <font>size22</font>
                    <align>center</align>
                    <label>$INFO[ListItem.Property(Album_Label),, • ]$INFO[ListItem.Year]</label>
                </control>
            </control>
            <control type="group">
                <visible>!Container.Content(addons) + !Skin.HasSetting(noslideicon)</visible>
                <visible>Container(53).Column(4)| Container(53).Column(5) | Container(53).Column(6) | Container(53).Column(7)</visible>
                <left>-10</left>
                <top>890</top>
                <animation effect="slide" start="-710,0" end="0,0" time="450" delay="200">visiblechange</animation>
                <control type="image" description="Dialog BG">
                    <width>700</width>
                    <height>168</height>
                    <texture border="30" flipx="true">images/ProgressBG.png</texture>
                </control>
                <control type="image" description="Dialog BG">
                    <width>700</width>
                    <height>168</height>
                    <texture border="30" flipx="true"  colordiffuse="$VAR[diffuseselect]">images/ProgressBG.png</texture>
                </control>
                <control type="group">
                    <animation condition="IsEmpty(ListItem.Property(Album_Label)) + IsEmpty(ListItem.Year)" effect="slide" end="0,15">Conditional</animation>
                    <control type="label" description="Title">
                        <left>10</left>
                        <top>4</top>
                        <width>680</width>
                        <height>50</height>
                        <align>center</align>
                        <font>size36</font>
                        <textcolor>orange</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label" description="Media details">
                        <top>45</top>
                        <width>700</width>
                        <height>50</height>
                        <align>center</align>
                        <font>size26</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                    <control type="image" description="Stars">
                        <centerleft>350</centerleft>
                        <top>90</top>
                        <height>30</height>
                        <width>150</width>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="main">$INFO[ListItem.StarRating]</texture>
                    </control>
                </control>
                <control type="label">
                    <top>125</top>
                    <height>20</height>
                    <width>700</width>
                    <font>size22</font>
                    <align>center</align>
                    <label>$INFO[ListItem.Property(Album_Label),, • ]$INFO[ListItem.Year]</label>
                </control>
            </control>
            <control type="group">
                <visible>Container.Content(addons) + !Skin.HasSetting(noslideicon)</visible>
                <visible>[Container(53).Column(0) + !StringCompare(ListItem.Label,..)] | Container(53).Column(1) | Container(53).Column(2) | Container(53).Column(3)</visible>
                <left>1230</left>
                <top>450</top>
                <animation effect="slide" start="710,0" end="0,0" time="450" delay="200">visiblechange</animation>
                <control type="image" description="Dialog BG">
                    <width>700</width>
                    <height>600</height>
                    <texture border="30">images/ProgressBG.png</texture>
                </control>
                <control type="label" description="Title">
                    <top>20</top>
                    <width>700</width>
                    <height>50</height>
                    <align>center</align>
                    <font>size36</font>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label" description="Version">
                    <top>58</top>
                    <width>700</width>
                    <height>50</height>
                    <align>center</align>
                    <font>size24</font>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
                <control type="label" description="Media details">
                    <top>90</top>
                    <width>700</width>
                    <height>50</height>
                    <align>center</align>
                    <font>size26</font>
                    <label>$VAR[TopLabel]</label>
                </control>
                <control type="image">
